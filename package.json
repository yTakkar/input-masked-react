{
  "name": "input-masked-react",
  "version": "0.4.2",
  "description": "A fully customizable masked input component with React",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "build:watch": "tsc -w",
    "demo": "parcel demo/index.html -p 4000 -d demo/dist",
    "lint": "tslint -c ./tslint.json -p .",
    "lint:fix": "tslint -p . --fix"
  },
  "keywords": [
    "Masked Input",
    "OTP",
    "DOB"
  ],
  "devDependencies": {
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.4"
  },
  "author": "Faiyaz Shaikh <www.shtakkar@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yTakkar/input-masked-react"
  },
  "bugs": {
    "url": "https://github.com/yTakkar/input-masked-react/issues"
  },
  "dependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4"
  },
  "lint-staged": {
    "linters": {
      "src/*.{ts,tsx}": [
        "npm run lint:fix",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}